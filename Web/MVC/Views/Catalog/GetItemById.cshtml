@model MVC.ViewModels.CatalogViewModels.CatalogItemForSingleItem

@{
    ViewBag.Title = "Item";
    Layout = "_Layout";
}
<section class="esh-catalog-hero">
    <div class="container-fluid">
    </div>
</section>

@if (Context.User.Identity.IsAuthenticated)
{
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="esh-catalog-thumbnail">
                            <img class="esh-catalog-thumbnail mx-auto d-block" src="@Model.catalogItem.PictureUrl" alt="Card image">
                        </div>
                        <p class="card-text">@Model.catalogItem.Name</p>
                        <p class="card-text">@Model.catalogItem.CatalogModel.CatalogBrand.Brand @Model.catalogItem.CatalogModel.Model</p>
                        <p class="card-text">@Model.catalogItem.Description</p>
                        <div class="esh-catalog-price">
                            <span>@Model.catalogItem.Price.ToString("N2")</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <form asp-controller="Basket" asp-action="AddItemsInBasket" method="post">
                            <div class="esh-catalog-counter">
                                <input asp-for="@Model.basketItem.Count" class="esh-catalog-counter-value mb-2" min="1" id="valueInput">
                            </div>
                            <input type="hidden" asp-for="@Model.catalogItem.Id" />
                            <button class="btn btn-primary">Add to cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="esh-catalog-thumbnail">
                            <img src="@Model.catalogItem.PictureUrl" alt="Card image">
                        </div>
                        <p class="card-text">@Model.catalogItem.Name</p>
                        <p class="card-text">@Model.catalogItem.CatalogModel.CatalogBrand.Brand @Model.catalogItem.CatalogModel.Model</p>
                        <p class="card-text">@Model.catalogItem.Description</p>
                        <div class="esh-catalog-price">
                            <span>@Model.catalogItem.Price.ToString("N2")</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <p>To order please sign in</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
