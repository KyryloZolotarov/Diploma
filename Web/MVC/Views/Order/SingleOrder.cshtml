@model MVC.ViewModels.OrderViewModels.ListOrderItemsFordDisplay

@{
    ViewBag.Title = "Order";
    Layout = "_Layout";
}
<section class="esh-catalog-hero">
    <div class="container-fluid">
    </div>
</section>

<div class="container-fluid">

    <div class="container-fluid">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Part Name</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Price</th>
                <th>Count</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.CatalogModel.CatalogBrand.Brand</td>
                        <td>@item.CatalogModel.Model</td>
                        <td>@item.Price $</td>
                        <td>@item.Count</td>
                    </tr>
                }
            </tr>
            </tbody>
        </table>
    </div>

</div>