<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catalog.Front.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
               x:Name="ItemsBtn"
               Text="View Existing Items"
               Clicked="OnItemsClicked"
               HorizontalOptions="Center" />

            <Button
                x:Name="AddItemBtn"
                Text="Add Item"
                Clicked="OnAddItemClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
